<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rushi.e_agree.Sell_page">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Place Advertise"
        android:textStyle="normal"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="Product Name:"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="25dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Productname"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/productname"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Choose Image"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:id="@+id/buttonChoose"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="25dp"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:layout_marginLeft="200dp"
        android:id="@+id/imageView"
        android:layout_marginTop="130dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="200dp"
        android:text="Item Price:"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="price"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:id="@+id/productprice"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="255dp"
        android:text="Item Quantity:"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="25dp"
        android:hint="quantity"
        android:ems="10"
        android:id="@+id/product_quantity"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="310dp"
        android:text="Contact Number:"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="contact number"
        android:ems="10"
        android:id="@+id/user_contactnumber"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="Address Details:"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView5"
        android:layout_below="@+id/user_contactnumber"
        android:layout_alignLeft="@+id/user_address"
        android:layout_alignStart="@+id/user_address" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:ems="10"
        android:id="@+id/user_address"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/user_contactnumber"
        android:layout_alignStart="@+id/user_contactnumber" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Place Add"
        android:id="@+id/buttonUpload"
        android:background="@color/colorPrimary"
        android:textColor="#ffff"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="120dp"
        />



</RelativeLayout>
